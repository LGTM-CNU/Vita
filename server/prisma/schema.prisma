generator client {
  provider = "prisma-client-js"
}
// 데이터 베이스 연동
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

// 데이터 베이스 스키마
model User {
  // id autoincrement
  id Int @id @default(autoincrement())
  password String
  name String
  mode Role @default(USER)

  createdAt DateTime @default(now())
}

model Medicine {
  id Int @default(autoincrement()) @id
  // user_id foreign key
  user_id Int @map("user_id")

  name String
}

model Alarm {
  id Int @id @default(autoincrement())
  // user_id foreign key
  user_id Int @map("user_id")
  // medicine_id foreign key
  medicine_id Int @map("medicine_id")

  time DateTime
  createdAt DateTime @default(now())


}

model Todo {
  id Int @default(autoincrement()) @id
}